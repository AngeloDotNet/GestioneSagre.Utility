{
    "Kestrel": {
        "Limits": {
            "MaxRequestBodySize": 5242880
        }
    },
    "Serilog": {
        "MinimumLevel": "Debug",
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "outputTemplate": "{Timestamp:HH:mm:ss}\t{Level:u3}\t{SourceContext}\t{Message}{NewLine}{Exception}"
                }
            },
            {
                "Name": "File",
                "Args": {
                    "path": "Logs/log.txt",
                    "rollingInterval": "Day",
                    "retainedFileCountLimit": 14,
                    "restrictedToMinimumLevel": "Information",
                    "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
                    "outputTemplate": "{Timestamp:HH:mm:ss}\t{Level:u3}\t{SourceContext}\t{Message}{NewLine}{Exception}"
                }
            },
            {
                "Name": "Seq",
                "Application": "Gestione Sagre Utility",
                "Args": {
                    "serverUrl": "http://YOUR-SERVER-SEQ:5341",
                    "ApiKey": "YOUR-APIKEY",
                    "restrictedToMinimumLevel": "Information",
                    "outputTemplate": "{Timestamp:HH:mm:ss}\t{Level:u3}\t{SourceContext}\t{Message}{NewLine}{Exception}"
                }
            }
        ]
    },
    "ConnectionStrings": {
        "Default": "Data Source=NOME-SERVER\\NOME-ISTANZA;Initial Catalog=GestioneSagre-Utility;User ID=sa;Password=PASSWORD;Encrypt=False", //Ambiente sviluppo
        "Docker": "Server=NOME-DOCKER;Database=GestioneSagre-Utility;User=sa;Password=PASSWORD;Encrypt=False", //Ambiente Produzione
        "DockerHost": "sqlserver", //Sostituire con il nome docker corretto (se necessario)
        "Hostname": "localhost", //Sostituire con il nome host corretto (se necessario)
        "Port": "1433", //Sostituire con la porta corretta (se necessario)
        "Password": "DATABASE-PASSWORD", //Sostituire con la password corretta
        "TypeStartup": "Default" //Opzioni: Default, Docker - Sostituire con il tipo di startup corretto
    },
    "Redis": {
        "Hostname": "localhost:6379",
        "InstanceName": "RedisCache_Utility",
        "AbsoluteExpireTime": 60,
        "SlidingExpireTime": 15
    },
    "RabbitMQ": {
        "Hostname": "RABBITMQ-HOSTNAME",
        "VirtualHost": "/",
        "Username": "RABBITMQ-USERNAME",
        "Password": "RABBITMQ-PASSWORD",
        "ExchangeType": "fanout",
        "NameResponse-1": "RES-Utility-Bus1",
        "NameResponse-2": "RES-Utility-Bus2",
        "Durable": true,
        "Exclusive": false,
        "AutoDelete": false,
        "PrefetchCount": 5
    }
}